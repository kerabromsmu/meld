{
	"name": "meld",
	"description": "A tiny game engine built on top of OpenGL and Derelict",
	"copyright": "Copyright Â© 2014 Alex Parker",
	"authors": ["Alex Parker"],
	"license": "BSL-1.0",
	"buildTypes": {
		"release": {
			"lflags-windows": ["/exet:nt/su:windows"]
		}
	},
	"dependencies": {
		"derelict-gl3": "~master",
		"derelict-glfw3": "~master",
		"msgpack-d": ">=0.9.1"
	},
	"configurations": [
		{
			"name": "library",
			"targetType": "library",
			"sourcePaths": ["engine/source"],
			"importPaths": ["engine/source"],
			"targetPath": "bin",
			"copyFiles-windows": ["lib/assimp.dll", "lib/glfw3.dll"], 
			"preBuildCommands": ["cd $PACKAGE_DIR && dub build --config=mcb"],
			"postBuildCommands-OSX": ["$PACKAGE_DIR/bin/mcb"],
			"postBuildCommands-windows": ["$PACKAGE_DIR/bin/mcb.exe"]
		},
		{
			"name": "mcb",
			"targetType": "executable",
			"sourcePaths": ["contentpipeline/source", "engine/source"],
			"importPaths": ["contentpipeline/source", "engine/source"],
			"dependencies": {
				"derelict-assimp3": "~master"
			},
			"targetName": "mcb",
			"targetPath": "bin"
		}
	]
}
