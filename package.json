{
	"name": "meld",
	"description": "A tiny game engine built on top of OpenGL and Derelict",
	"copyright": "Copyright Â© 2014 Alex Parker",
	"authors": ["Alex Parker"],
	"license": "BSL-1.0",
	"dependencies": {
		"derelict-gl3": "~master",
		"derelict-glfw3": "~master"
	},
	"targetType": "executable",
	"configurations": [
		{
			"name": "windows-desktop",
			"platforms": ["windows"],
			"preBuildCommands": [
				"dmc -c source/stb_image.c -o.dub/build/stb_image.obj",
				"lib -c .dub/build/stb_image.lib .dub/build/stb_image.obj"
			],
			"libs": [".dub/build/stb_image"]
		},
		{
			"name": "posix",
			"preBuildCommands": ["gcc -c -o .dub/build/stb_image.o source/stb_image.c"],
			"lflags": [".dub/build/stb_image.o"]
		}
	],
	"buildTypes": {
		"release": {
			"lflags-windows": ["/exet:nt/su:windows"]
		}
	}
}
