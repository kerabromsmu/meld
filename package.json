{
	"name": "meld",
	"description": "A tiny game engine built on top of OpenGL and Derelict",
	"copyright": "Copyright Â© 2014 Alex Parker",
	"authors": ["Alex Parker"],
	"license": "BSL-1.0",
	"buildTypes": {
		"release": {
			"lflags-windows": ["/exet:nt/su:windows"]
		}
	},
	"configurations": [
		{
			"name": "library",
			"targetType": "library",
			"sourcePaths": ["engine/source"],
			"importPaths": ["engine/source"],
			"dependencies": {
				"derelict-gl3": "~master",
				"derelict-glfw3": "~master"
			},
			"copyFiles-windows": ["$PACKAGE_DIR/lib/mcb.exe", "$PACKAGE_DIR/lib/glfw3.dll", "$PACKAGE_DIR/lib/assimp.dll"],
			"copyFiles-osx": ["$PACKAGE_DIR/lib/mcb"]
		},
		{
			"name": "mcb",
			"targetType": "executable",
			"sourcePaths": ["contentpipeline/source"],
			"importPaths": ["contentpipeline/source"],
			"dependencies": {
				"derelict-assimp3": "~master"
			},
			"targetName": "lib/mcb"
		}
	]
}
